<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="PresentationTestSuite">


    <listeners>
        <listener class-name="com.example.bitpanda.ui.task.solution.config.ProjectTestListener"/>
    </listeners>

    <test name="Shopping cart modal Tests">
        <groups>
            <run>
                <include name="modalTests"/>
            </run>
        </groups>
        <classes>
            <class name="com.example.bitpanda.ui.task.solution.ShoppingCartModalTests">

            </class>
        </classes>
    </test>

    <test name="Product should be added to shopping cart Test">

        <classes>
            <class name="com.example.bitpanda.ui.task.solution.MainPageTest">
                <methods>
                    <include name="addProductToCard"/>
                </methods>
            </class>
        </classes>
    </test>


</suite>