    <groupId>com.example.bitpanda.task.solution</groupId>
    <artifactId>bitpanda-tasks-solution</artifactId>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>
    <modules>
        <module>ui-task</module>
        <module>load-task</module>
        <module>api-task</module>
    </modules>
    <name>bitpanda-tasks-solution</name>

    <properties>
        <maven.compiler.target>11</maven.compiler.target>
        <maven.compiler.source>11</maven.compiler.source>
        <aspectj.version>1.9.6</aspectj.version>
        <selenium.version>3.141.59</selenium.version>
        <selenide.version>5.15.1</selenide.version>
        <allure.version>2.13.6</allure.version>
        <webdriver.manager.version>4.2.0</webdriver.manager.version>
        <assertj.version>3.17.1</assertj.version>
        <testng.version>7.1.0</testng.version>
        <slf4j.version>1.7.29</slf4j.version>
        <lombok.version>1.18.16</lombok.version>
        <java.faker.version>1.0.2</java.faker.version>
        <jackson.version>2.12.0</jackson.version>
        <junit.jupiter.version>5.7.0</junit.jupiter.version>
        <junit.version>4.12</junit.version>
        <zero.code.version>1.3.26</zero.code.version>
        <rest.assured.version>4.3.2</rest.assured.version>
    </properties>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.seleniumhq.selenium</groupId>
                <artifactId>selenium-java</artifactId>
                <version>${selenium.version}</version>
            </dependency>
            <dependency>
                <groupId>org.projectlombok</groupId>
                <artifactId>lombok</artifactId>
                <version>${lombok.version}</version>
            </dependency>
            <dependency>
                <groupId>io.qameta.allure</groupId>
                <artifactId>allure-testng</artifactId>
                <version>${allure.version}</version>
            </dependency>
            <dependency>
                <groupId>com.codeborne</groupId>
                <artifactId>selenide</artifactId>
                <version>${selenide.version}</version>
            </dependency>
            <dependency>
                <groupId>io.qameta.allure</groupId>
                <artifactId>allure-selenide</artifactId>
                <version>${allure.version}</version>
            </dependency>
            <dependency>
                <groupId>io.github.bonigarcia</groupId>
                <artifactId>webdrivermanager</artifactId>
